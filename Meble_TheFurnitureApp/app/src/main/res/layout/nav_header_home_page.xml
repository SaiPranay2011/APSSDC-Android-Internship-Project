<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"

    android:background="@drawable/shapetheme"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="5dp"
        android:background="@drawable/imageviewborder"

        app:srcCompat="@drawable/main_logo_playstore" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#553A07"
        android:fontFamily="@font/audiowide"
        android:textAllCaps="true"
        android:text="@string/nav_header_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#714D08"
        android:autoLink="all"
        android:textColorLink="#714D08"
        android:text="@string/nav_header_subtitle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+91 9989263214"
        android:autoLink="all"
        android:textColorLink="#714D08"/>

</LinearLayout>
