<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Chairs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shapetheme">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/Benches"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/imageviewborder"
            android:padding="7.5dp"
            android:src="@drawable/chairs_benches" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:id="@+id/DeskChairs"
            android:padding="7.5dp"
            android:background="@drawable/imageviewborder"
            android:src="@drawable/chairs_desk_chairs" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/DiningChairs"
            android:background="@drawable/imageviewborder"
            android:padding="7.5dp"
            android:src="@drawable/chairs_dining_chairs" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:id="@+id/Stools"
            android:background="@drawable/imageviewborder"
            android:padding="7.5dp"
            android:src="@drawable/chairs_stools" />

    </LinearLayout>
</LinearLayout>
</ScrollView>