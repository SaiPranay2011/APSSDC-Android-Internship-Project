<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FurnitureSets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shapetheme">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ArmChairs"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/imageviewborder"
            android:padding="7.5dp"
            android:src="@drawable/furniture_sets_arm_chairs" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:id="@+id/BathroomFurnitureSets"
            android:background="@drawable/imageviewborder"
            android:padding="7.5dp"
            android:src="@drawable/furniture_sets_fathroom_furniture" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/DiningSets"
            android:background="@drawable/imageviewborder"
            android:padding="7.5dp"
            android:src="@drawable/furniture_sets_dining_sets" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:id="@+id/OscFurniture"
            android:background="@drawable/imageviewborder"
            android:padding="7.5dp"
            android:src="@drawable/furniture_sets_outside_furniture" />

    </LinearLayout>
</LinearLayout>
</ScrollView>

